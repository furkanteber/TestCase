@model Product
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-controller="Home" asp-action="CreateProduct">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-header">
            <div class="card-title">Product Create </div>
            <div class="card-category"></div>
        </div>
        <div class="card-body">
            <div class="form">
                <div class="form-group from-show-notify row">
                    <div class="col-lg-3 col-md-3 col-sm-12 text-right">
                        <label>Product Title:</label>
                    </div>
                    <div class="col-lg-6 col-md-9 col-sm-12">
                        <input type="text" class="form-control" asp-for="Title" />
                    </div>
                    <span asp-validation-for="Title" style="color:red;"></span>
                </div>
                <br />
                <div class="form-group from-show-notify row">
                    <div class="col-lg-3 col-md-3 col-sm-12 text-right">
                        <label>Product Description:</label>
                    </div>
                    <div class="col-lg-6 col-md-9 col-sm-12">
                        <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                    </div>
                    <span asp-validation-for="Description" style="color:red;"></span>
                </div>
                <br />
                <div class="form-group from-show-notify row">
                    <div class="col-lg-3 col-md-3 col-sm-12 text-right">
                        <label>Quantity :</label>
                    </div>
                    <div class="col-lg-6 col-md-9 col-sm-12">
                        <input type="number" asp-for="Quantity" class="form-control " />
                    </div>
                    <span asp-validation-for="Quantity" style="color:red;"></span>
                </div>
                <br />
                <div class="form-group from-show-notify row">
                    <div class="col-lg-3 col-md-3 col-sm-12 text-right">
                        <label>Category :</label>
                    </div>
                    <div class="col-lg-6 col-md-9 col-sm-12">
                        @await Component.InvokeAsync("_CategoryListComponentPartial")
                    </div>
                    <span asp-validation-for="CategoryId" style="color:red;"></span>
                </div>

            </div>
        </div>
        <div class="card-footer">
            <div class="form">
                <div class="form-group from-show-notify row">
                    <div class="col-lg-3 col-md-3 col-sm-12">
                    </div>
                    <div class="col-lg-4 col-md-9 col-sm-12">
                        <button id="displayNotif" class="btn btn-success">Save</button>
                        <a href="/Home/Index" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

